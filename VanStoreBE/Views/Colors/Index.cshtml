@model IEnumerable<VanStoreBE.Models.Color>

@{
    ViewBag.Title = "Index";
}

<h2>QUẢN LÝ HÀNG HÓA</h2>

<table class="table">
    <tr>
        <th>
            Màu sắc
        </th>
        <th>
            RGB
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RGB)
                <span style="background-color:@Url.Content(item.RGB); display:inline-block; width:25px;height:20px">&nbsp;</span>
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ColorID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ColorID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
</div>
