@model IEnumerable<VanStoreBE.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th, td {
        width: 100%;
        white-space: nowrap;
        text-align:center;
        vertical-align: middle;
        border: 1px solid black;
    }
</style>

<h2>Đơn hàng</h2>

<table class="table">
    <tr>
        <th>
            NGÀY ĐẶT HÀNG
        </th>
        <th>
            TÊN KHÁCH HÀNG
        </th>
        <th>
            ĐỊA CHỈ NHẬN
        </th>
        <th>
            ĐỊA CHỈ EMAIL
        </th>
        <th>
            SỐ ĐIỆN THOẠI
        </th>
        <th>
            TỔNG HÓA ĐƠN
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressDeliverry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CusEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CusPhone)
        </td>
        <td>
            @string.Format("{0:N0}", item.TotalValue)
        </td>
        <td>
            @*@Html.ActionLink("Sửa", "Edit", new { id = item.OrderID }, new { @class = "btn btn-primary" })*@
            @Html.ActionLink("Chi tiết đơn hàng", "Details", new { id = item.OrderID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Xóa", "Delete", new { id = item.OrderID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default" })
</p>
