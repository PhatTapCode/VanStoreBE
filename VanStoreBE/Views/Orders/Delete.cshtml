@model VanStoreBE.Models.Order

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bạn có chắc xóa đơn hàng này?</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày đặt hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            Địa chỉ nhận
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>


        <dt>
            Mã khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CusPassword)
        </dd>

        <dt>
            Tổng cộng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalValue)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info" })
</div>
    }
</div>
