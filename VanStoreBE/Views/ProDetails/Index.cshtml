@model IEnumerable<VanStoreBE.Models.ProDetail>

@{
    ViewBag.Title = "Index";
}
<style>
    th {
        white-space: nowrap;
    }
</style>
<h1>QUẢN LÝ HÀNG HÓA</h1>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table" style="text-align:center; border: 1px solid black; vertical-align: middle;">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Giá
        </th>
        <th>
            Màu sắc
        </th>
        <th>
            Xem số lượng còn lại
        </th>
        <th>
            Xem số lượng
        </th>

        <th>
            Xem số lượng đã bán
        </th>
        <th>
            Cỡ giày
        </th>
        <th>
            Dáng giày
        </th>
        <th>
            Giảm giá
        </th>
        <th>
            Ảnh 1
        </th>
        <th>
            Ảnh 2
        </th>
        <th>
            Ảnh 3
        </th>
        <th>
            Ảnh 4
        </th>
        <th>
            Ảnh 5
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupName)
            </td>
            <td>
                @string.Format("{0:N0}", item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size1.SizeNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SHAPE)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DISCOUNT)
            </td>
            <td>
                <img src="@Url.Content(item.Image1)" width="50" height="50" />
            </td>
            <td>
                <img src="@Url.Content(item.Image2)" width="50" height="50" />
            </td>
            <td>
                <img src="@Url.Content(item.Image3)" width="50" height="50" />
            </td>
            <td>
                <img src="@Url.Content(item.Image4)" width="50" height="50" />
            </td>
            <td>
                <img src="@Url.Content(item.Image5)" width="50" height="50" />
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProDeID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProDeID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
