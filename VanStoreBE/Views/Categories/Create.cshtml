@model VanStoreBE.Models.Category

@{
    ViewBag.Title = "Create";
}

<h1>QUẢN LÝ LOẠI HÀNG</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="control-label col-md-2">MÃ LOẠI </div>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.CatID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">TÊN LOẠI</div>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:10px;">
            <input type="submit" value="Thêm mới" class="btn btn-success" />
            <input type="reset" value="Nhập lại" class="btn btn-danger" />
            @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>
</div>
}