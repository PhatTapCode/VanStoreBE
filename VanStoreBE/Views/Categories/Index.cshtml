@model IEnumerable<VanStoreBE.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h1>QUẢN LÝ LOẠI HÀNG</h1>
<table class="table">
    <tr>
        <th>
            MÃ LOẠI
        </th>
        <th>
            TÊN LOẠI
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CatID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.CatID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</div>
