@model IEnumerable<VanStoreBE.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CHI TIẾT ĐƠN HÀNG</h2>

<table class="table">
    <tr>
        <th>
            Sản Phẩm
        </th>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Màu sắc 
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Product.ProName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Supplier.SupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProDetail.Color.ColorName)
        </td>
         <td>
             @Html.DisplayFor(modelItem => item.Quantity)
         </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.TotalValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
            @Html.ActionLink("details", "Details", new { id = item.OrderDetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID })
        </td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default" })
</p>
