@model IEnumerable<VanStoreBE.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>QUẢN LÝ NGƯỜI QUẢN TRỊ</h2>

<hr />
<table class="table">
    <tr>
        <th>
            TÀI KHOẢN QUẢN TRỊ
        </th>
        <th>
            MẬT KHẨU
        </th>
        <th>
            VAI TRÒ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Username }, new {@class ="btn btn-info"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Username }, new {@class ="btn btn-danger"})
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
