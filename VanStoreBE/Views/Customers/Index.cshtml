@model IEnumerable<VanStoreBE.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Khách Hàng</h2>
<table class="table">
    <tr>
        <th>
           TÊN KHÁCH HÀNG
        </th>
        <th>
            EMAIL KHÁCH HÀNG
        </th>
        <th>
            SỐ ĐIỆN THOẠI
        </th>

        <th>
           MÃ KHÁCH HÀNG
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.CusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusEmail)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CusPhone)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CusPassword)
        </td>

        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.CusPhone }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xóa", "Delete", new { id = item.CusPhone }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
</table>
